<div class="banner">
  <%= image_tag 'kale.png', :class => "kale" %>
  <%= image_tag 'carrot.png', :class => "carrot" %>
  <%= image_tag 'corn.png', :class => "corn" %>
  <div class="banner-content">
    <h2 class="home-title">The Farmer's Market.<br>Delivered to your door.</h2>
    <h5 class="principal-para">See the grocery products that local farmers are providing in your delivery area.</h5>
    <%= form_tag postcodecheckers_path, method: :post do %>

      <input id="address" name="address" type="text" placeholder=" check address"
      <%if((!current_user.nil?) && (!current_user.contact.nil?) && (!current_user.contact.address.blank?))%>
       value=<%=current_user.contact.address%>
       <%end%>/>

      <input type="submit" value="shop now" class="banner-button" >
    <% end %>
  </div>
</div>

